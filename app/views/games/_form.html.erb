<%= form_for(@game) do |f| %>
<% if @game.errors.any? %>
<%= render partial: "shared/errors", locals: { resource: @game } %>
<% end %>

<div class="form-group">
                <%= f.label :id %>
            <%= f.number_field :id, :class => "form-control" %>
    </div>
<div class="actions">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
