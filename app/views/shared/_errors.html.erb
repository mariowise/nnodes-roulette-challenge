<% if resource.errors.any? %>
<div class="alert alert-danger">
	<h4>Se han detectado los siguientes errores</h4>
	<ul>
		<% resource.errors.messages.each do |error| %>
			<% error[1].each do |msg| %>
			<li>
				<%#= label resource.class.to_s.downcase, error[0], :class => "label label-danger" %>
				<%= msg %>
			</li>
			<% end %>
		<% end %>
	</ul>
</div>
<% end %>