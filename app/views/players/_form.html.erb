<%= form_for(@player) do |f| %>
<% if @player.errors.any? %>
<%= render partial: "shared/errors", locals: { resource: @player } %>
<% end %>

<div class="form-group">
                <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :balance %>
            <%= f.number_field :balance, :class => "form-control" %>
    </div>
<div class="actions">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
