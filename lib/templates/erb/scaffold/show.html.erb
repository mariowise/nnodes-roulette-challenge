
<div class="row">
	<div class="col-md-9">

		<div class="panel panel-default">
			<div class="panel-heading panel-heading-toolbox">
				<div class="panel-title">
					<%%= t(:detail, scope: [:helpers, :scaffold]) %>
				</div>
				<div class="panel-toolbar">
					<%%= link_to 'Volver', <%= index_helper %>_path, :class => "btn btn-link" %>
					<%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => "btn btn-default" do %><i class="fa fa-pencil"></i> Editar<%% end %>
					<%%= link_to @<%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %><i class="fa fa-trash-o"></i> Eliminar<%% end %>
				</div>
			</div>
			<div class="panel-body">
				
				<table class="table table-bordered">
					<tbody>
					<tr>
						<th><%%= t(:id, scope: [:helpers, :label, :<%= singular_table_name %>]) %></th>
						<td><%%= @<%= singular_table_name %>.id %></td>
					</tr>
					<% attributes.reject(&:password_digest?).each do |attribute| -%>
						<tr>
						  <th><%%= t(:<%= attribute.name %>, scope: [:helpers, :label, :<%= singular_table_name %>]) %>:</th>
						  <td><%%= @<%= singular_table_name %>.<%= attribute.name %> %></td>
						</tr>
					<% end -%>
					</tbody>
				</table>

			</div>
		</div>

	</div>
	<div class="col-md-3">

		<%%= render "info" %>

	</div>
</div>